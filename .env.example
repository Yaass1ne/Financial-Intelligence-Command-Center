# FINCENTER Environment Variables
# Copy this file to .env and fill in your values
# Usage: cp .env.example .env

# ============================================
# Application Configuration
# ============================================
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# ============================================
# Neo4j Configuration (Graph Database)
# ============================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=fincenter2024
NEO4J_DATABASE=neo4j

# ============================================
# PostgreSQL Configuration
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=fincenter
POSTGRES_USER=fincenter
POSTGRES_PASSWORD=fincenter2024

# Database URL (used by SQLAlchemy)
DATABASE_URL=postgresql://fincenter:fincenter2024@localhost:5432/fincenter

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=fincenter2024
REDIS_DB=0

# Redis URL (used by Celery)
REDIS_URL=redis://:fincenter2024@localhost:6379/0

# ============================================
# Celery Configuration (Background Tasks)
# ============================================
CELERY_BROKER_URL=redis://:fincenter2024@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:fincenter2024@localhost:6379/0

# ============================================
# Groq API â€” REQUIRED for AI Assistant
# ============================================
# Get a free key at https://console.groq.com
GROQ_API_KEY=gsk_your_groq_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# OpenAI API (optional alternative)
# ============================================
OPENAI_API_KEY=sk-...your-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096

# ============================================
# Anthropic API (optional alternative)
# ============================================
ANTHROPIC_API_KEY=sk-ant-...your-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================
# Vector Database Configuration
# ============================================
# For FAISS (local, file-based)
VECTOR_STORE_TYPE=faiss
VECTOR_STORE_PATH=./data/vectors/

# For Pinecone (cloud-based, optional)
# VECTOR_STORE_TYPE=pinecone
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=us-east-1-aws
# PINECONE_INDEX_NAME=fincenter

# For Weaviate (self-hosted, optional)
# VECTOR_STORE_TYPE=weaviate
# WEAVIATE_URL=http://localhost:8080
# WEAVIATE_API_KEY=your-weaviate-key

# ============================================
# Embedding Model Configuration
# ============================================
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768

# ============================================
# NLP Model Configuration
# ============================================
SPACY_MODEL=fr_core_news_lg  # French language model
NER_MODEL_PATH=./models/financial_ner_v1.pkl

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8080
API_RELOAD=True  # Auto-reload on code changes (dev only)

# CORS (Cross-Origin Resource Sharing)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440  # 24 hours

# ============================================
# File Upload Configuration
# ============================================
MAX_UPLOAD_SIZE_MB=50
ALLOWED_EXTENSIONS=pdf,xlsx,xls,csv,json,docx

# ============================================
# Data Processing Configuration
# ============================================
BATCH_SIZE=50  # Number of documents to process at once
MAX_WORKERS=4  # Parallel workers for document processing
CHUNK_SIZE=1000  # Chunk size for large files

# ============================================
# Simulation Configuration
# ============================================
MONTE_CARLO_ITERATIONS=10000
SIMULATION_CONFIDENCE_LEVEL=0.95

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL_SECONDS=300  # 5 minutes
CACHE_ENABLED=True

# ============================================
# Monitoring & Logging
# ============================================
# Sentry (error tracking)
SENTRY_DSN=https://...@sentry.io/...
SENTRY_TRACES_SAMPLE_RATE=0.1

# Log file path
LOG_FILE_PATH=./logs/fincenter.log

# ============================================
# Development Tools
# ============================================
# Enable profiling
ENABLE_PROFILING=False

# Enable query debugging
ENABLE_QUERY_DEBUG=False
